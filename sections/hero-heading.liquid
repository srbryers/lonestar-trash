{%- style -%}
  .hero-heading {
    color: var(--Orange, #e36e00);
    text-align: center;
    leading-trim: both;
    text-edge: cap;
    font-family: 'Council OT';
    font-size: 17vw;
    font-style: normal;
    font-weight: 400;
    line-height: 100%;
    letter-spacing: 5.72px;
    margin: 48px;
  }

  @media (max-width: 480px) {
    .hero-heading {
      font-size: 160px;
      line-height: 80%;
      letter-spacing: 3.2px;
    }
  }
{%- endstyle -%}

<div class="isolate {% unless section.settings.full_width %} page-width{% endunless %}">
  <h1
    class="hero-heading {{ section.settings.heading_size }} {% if section.settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    {{ section.shopify_attributes }}
    {% if section.settings.animations_reveal_on_scroll %}
      data-cascade
      style="--animation-order: 0;"
    {% endif %}
  >
    {{ section.settings.heading }}
  </h1>
</div>

{% schema %}
{
  "name": "Hero Heading",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading Size",
      "default": "h1",
      "options": [
        {
          "value": "h1",
          "label": "Heading 1"
        },
        {
          "value": "h2",
          "label": "Heading 2"
        },
        {
          "value": "h3",
          "label": "Heading 3"
        },
        {
          "value": "h4",
          "label": "Heading 4"
        },
        {
          "value": "h5",
          "label": "Heading 5"
        },
        {
          "value": "h6",
          "label": "Heading 6"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "animations_reveal_on_scroll",
      "label": "Reveal on scroll",
      "default": false
    }
  ],
  "presets": [
    {
      "category": "Text",
      "name": "Hero Heading",
      "settings": {
        "heading": "Heading"
      }
    }
  ]
}
{% endschema %}
