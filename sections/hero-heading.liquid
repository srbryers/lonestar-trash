<div class="isolate{% unless section.settings.full_width %} page-width{% endunless %}">
  <h1 
    class="hero-heading {{ section.settings.heading_size }} {% if section.settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    {{ section.shopify_attributes }}
    {% if section.settings.animations_reveal_on_scroll %}
      data-cascade
      style="--animation-order: 0;"
    {% endif %}
  >
    {{ section.settings.heading }}
  </h1>
</div>

{% schema %}
{
  "name": "Hero Heading",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading Size",
      "default": "h1",
      "options": [
        "h1",
        "h2",
        "h3",
        "h4",
        "h5",
        "h6"
      ]
    },
    {
      "type": "checkbox",
      "id": "animations_reveal_on_scroll",
      "label": "Reveal on scroll",
      "default": false
    }
  ]
}
{% endschema %}