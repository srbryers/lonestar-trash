{%- style -%}
  .header-image {
    text-align: center;
    margin: 40px;
    box-sizing: border-box;
    width: 132px;
    margin: 0 auto;
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  .header-image img {
    max-width: 100%;
    height: auto;
  }
{%- endstyle -%}

<header>
  <div class="header-image">
    {%- if section.settings.header_image %}<img src="{{ section.settings.header_image | img_url: 'master' }}" alt="Header Image" />{%- endif -%}
  </div>
</header>

{%- schema -%}
{
  "name": "Landing Page Header",
  "enabled_on": {
    "groups": [
      "custom.header"
    ]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "header_image",
      "label": "Header Image",
      "info": "The image that will be displayed in the header."
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 0
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Landing Page Header",
      "settings": {
        "header_image": "shopify:\/\/shop_images\/6ed4f9e68dba8ee2b43fc236992681df.png"
      }
    }
  ]
}
{%- endschema -%}