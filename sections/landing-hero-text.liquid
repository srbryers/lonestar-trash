{%- style -%}
  .hero-heading {
    color: var(--Orange, #e36e00);
    text-align: center;
    leading-trim: both;
    text-edge: cap;
    font-family: 'council', 'Council OT', 'Council', serif;
    font-size: {{ section.settings.font_size }};
    font-style: normal;
    font-weight: 400;
    line-height: 100%;
    letter-spacing: 5.72px;
    margin: 0 48px 0;
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media (max-width: 480px) {
    .hero-heading {
      font-size: 140px;
      line-height: 80%;
      letter-spacing: 3.2px;
      margin: 20px 0 28px;
      padding: 0;
    }
  }
{%- endstyle -%}

<div class="isolate {% unless section.settings.full_width %} page-width{% endunless %}">
  <h1
    class="hero-heading {{ section.settings.heading_size }} {% if section.settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    {{ section.shopify_attributes }}
    {% if section.settings.animations_reveal_on_scroll %}
      data-cascade
      style="--animation-order: 0;"
    {% endif %}
  >
    {{ section.settings.heading }}
  </h1>
</div>

{% schema %}
{
  "name": "Hero Text",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 40
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width",
      "default": false
    },
    {
      "type": "text",
      "id": "font_size",
      "label": "Font Size",
      "default": "17vw"
    },
    {
      "type": "checkbox",
      "id": "animations_reveal_on_scroll",
      "label": "Reveal on scroll",
      "default": false
    }
  ],
  "presets": [
    {
      "category": "Text",
      "name": "Hero Heading",
      "settings": {
        "heading": "Heading"
      }
    }
  ]
}
{% endschema %}
